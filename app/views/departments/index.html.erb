<div>
  <div class="text-4xl font-medium uppercase font-bold pb-2">Departments</div>
  <hr/>
  <div class="pt-6 pb-2">
    <% @departments.each do |department| %>
      <div class="font-medium m-4">
        <%= render 'department', department: department %>
      </div>
    <% end %>
  </div>

  <div>
      <%= link_to new_department_path do %>
        <div class="rounded bg-indigo-600 text-white uppercase shadow-md hover:shadow-lg hover:bg-indigo-700 px-6 py-2.5 text-center">
          New Department
        </div>
      <% end %>
  </div>
</div>